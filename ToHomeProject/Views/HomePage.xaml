<?xml version="1.0" encoding="UTF-8" ?>
<MasterDetailPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Red"
    x:Class="ToHomeProject.Views.HomePage">
   <MasterDetailPage.Master>
          <ContentPage Title="Menu">
            <ScrollView>
                <StackLayout Orientation="Vertical" BackgroundColor="#83d9de">

                  <Button Style="{StaticResource NavButton}" Text="Home"/>
                  <Button Style="{StaticResource NavButton}" Text="Muebles"/>
                  <Button Style="{StaticResource NavButton}" Text="Electrodomesticos"/>
                  <Button Style="{StaticResource NavButton}" Text="LogOut" Clicked="LogOut"/>
                </StackLayout>
                </ScrollView>

          </ContentPage>
        </MasterDetailPage.Master>

        <MasterDetailPage.Detail>
          <NavigationPage>
            <x:Arguments>
              <ContentPage Title="Home Page">
                  <ScrollView>
                      <StackLayout>
                              <Image Source="bk.png"
                                     VerticalOptions="FillAndExpand"
                                     HorizontalOptions="FillAndExpand"/>
                      </StackLayout>
                  </ScrollView>
              </ContentPage>
            </x:Arguments>
          </NavigationPage>
        </MasterDetailPage.Detail>
</MasterDetailPage>
